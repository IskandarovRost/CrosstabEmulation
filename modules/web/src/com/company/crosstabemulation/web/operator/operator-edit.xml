<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.company.crosstabemulation.web.operator.OperatorEdit"
        datasource="operatorDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.crosstabemulation.web.operator">
    <dsContext>
        <datasource id="operatorDs"
                    class="com.company.crosstabemulation.entity.Operator"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="operatorDs">
            <column width="250px">
                <field id="name"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
